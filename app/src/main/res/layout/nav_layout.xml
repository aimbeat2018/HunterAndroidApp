<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:paddingLeft="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp">


    <LinearLayout
        android:id="@+id/lnrProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:onClick="onProfileClick"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_user"
            app:tint="@color/default_text" />

        <TextView
            android:id="@+id/txtProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:text="Profile"
            android:textColor="@color/default_text"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrWatchLater"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:onClick="onWatchLaterClick"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgWatchLater"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/outline_favorite_border_24"
            app:tint="@color/default_text" />

        <TextView
            android:id="@+id/txtWatchLater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:text="Watch Later"
            android:textColor="@color/default_text"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrSubscription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:onClick="onSubscriptionClick"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgSubscription"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/premium"
            app:tint="@color/default_text" />

        <TextView
            android:id="@+id/txtSubscription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:text="Subscription"
            android:textColor="@color/default_text"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrSupport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:onClick="onOnSupportClick"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgSupport"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/support"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/txtSupport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:text="Support / Helpline"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:onClick="onSettingsClick"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgSettings"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/setting"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/txtSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:text="Settings"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:onClick="onHelpClick"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgHelp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/help"
            app:tint="@color/default_text" />

        <TextView
            android:id="@+id/txtHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:text="Help"
            android:textColor="@color/default_text"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrRateUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:onClick="onRateUsClick"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgRateUs"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/rateus"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/txtRateUs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:text="Rate Us"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrPrivacyPolicy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:onClick="onPrivacyClick"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgPrivacyPolicy"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/ic_outline_insert_drive_file_24"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/txtPrivacyPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:text="Privacy Policy"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrTermsCondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:onClick="onTermsClick"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgTermsCondition"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/terms"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/txtTermsCondition"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:text="Terms &amp; Condition"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrRefundPolicy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:onClick="onRefundClick"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgRefundPolicy"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/refund_policy"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/txtRefundPolicy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:text="Refund Policy"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrSignout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        android:gravity="center_vertical"
        android:onClick="onSignOutClick"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/imgSignout"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="5dp"
            android:src="@drawable/outline_lock_24"
            app:tint="@color/default_text" />

        <TextView
            android:id="@+id/txtSignout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:text="Signout"
            android:textColor="@color/default_text"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>